@model CarSalePlatform.Models.Car

<!-- This page contains the HTML and CSS parts of the related files.-->

<div class="page-background">
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="form-container shadow">
            <h2 class="page-header text-center">Delete Car</h2>
            <p class="page-description text-center">Are you sure you want to delete this car?</p>

            <dl class="row">
                <dt class="col-sm-3">Brand</dt>
                <dd class="col-sm-9">@Model.Brand</dd>

                <dt class="col-sm-3">Model</dt>
                <dd class="col-sm-9">@Model.Model</dd>

                <dt class="col-sm-3">Year</dt>
                <dd class="col-sm-9">@Model.Year</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
            <div class="text-center">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-gradient px-5">Delete</button>
                    <a asp-action="Index" class="btn btn-gradient px-5">Cancel</a>
                </form>
            </div>
        </div>
        
    </div>
</div>

<style>
    .page-background {
        position: fixed;
        top: 56px;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, #f3eae8, #7c7973, #f3eae8);
        padding: 20px;
        overflow-y: auto;
    }

    .page-header {
        font-size: 2.5rem;
        font-weight: bold;
        color: #690a11;
        margin-bottom: 10px;
    }

    .page-description {
        font-size: 1.2rem;
        color: #000; 
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-container {
        background: #f8efed; 
        border-radius: 15px;
        padding: 30px;
        max-width: 600px;
        width: 100%;
    }

    .btn-gradient {
        font-size: 1.2rem;
        font-weight: 600;
        border: none;
        color: #fff;
        border-radius: 50px;
        background: linear-gradient(135deg, #ff6600, #690a11); 
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        padding: 10px 30px;
    }

    .btn-gradient:hover {
        background: linear-gradient(135deg, #ff9900, #ff6600); 
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.3);
        transform: translateY(-3px);
    }
</style>
